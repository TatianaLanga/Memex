        app:layout_constraintTop_toBottomOf="@id/Iv_post"
        android:layout_marginTop="55dp"
        />
    <ImageView
        android:id="@+id/Iv_curtida2"
        android:layout_width="35dp"
        android:layout_height="35dp"
